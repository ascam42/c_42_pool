int	ft_str_is_alpha(char *str)
{
  int	i;

  i = 0;
  if (!str)
    return (1);
  while (str[i] != '\0')
    {
      if ((str[i] >= 0 && str[i] <= '0')
	  || (str[i] > '9' && str[i] < 'A')
	  || (str[i] > 'Z' && str[i] < 'a')
	  || (str[i] > 'z') || str[i] == ' ')
	return (0);
      ++i;
    }
  return (1);
}
